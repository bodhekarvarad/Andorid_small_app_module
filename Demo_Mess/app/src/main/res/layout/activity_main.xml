<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mess_form"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=" Mess Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:drawableLeft="@drawable/baseline_blender_24"/>

            <EditText
                android:id="@+id/mess_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=" Price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:drawableLeft="@drawable/baseline_attach_money_24"/>

            <EditText
                android:id="@+id/mess_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=" Time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:drawableLeft="@drawable/baseline_access_time_24"/>

            <EditText
                android:id="@+id/mess_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=" Working Days"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:drawableLeft="@drawable/baseline_calendar_today_24"/>

            <EditText
                android:id="@+id/mess_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:inputType="text"
                android:padding="16dp"
                tools:ignore="TextFields"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"/>

            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/veg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Vegiterain"
                    android:textSize="20dp"
                    android:fontFamily="serif-monospace"/>

                <RadioButton
                    android:id="@+id/non_veg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Non-Vegiterain"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="serif-monospace"/>
            </RadioGroup>

            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/imgbtn"
                android:onClick="imgDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Click to add image"/>

        </LinearLayout>



    </ScrollView>

</FrameLayout>