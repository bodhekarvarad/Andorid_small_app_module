<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif1"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:src="@drawable/anim2"
            android:background="@drawable/superman"

            />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:src="@drawable/anim1"

        />

    <ImageButton
            android:src="@drawable/play"
            android:id="@+id/start"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/pause"
            android:layout_alignBottom="@+id/pause"
            android:layout_marginRight="60dp"
            android:background="#02000000"
            android:onClick="musicPlay"
            />
        <ImageButton
            android:src="@drawable/pause3d"
            android:scaleType="fitCenter"
            android:id="@+id/pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="450dp"
           android:layout_centerHorizontal="true"
            android:background="#02000000"
            android:onClick="musicPause"
            />
        <ImageButton
            android:src="@drawable/stop3d"
            android:scaleType="centerCrop"
            android:id="@+id/stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/pause"
            android:layout_alignBottom="@+id/pause"
            android:layout_marginLeft="60dp"
            android:text="Stop Music"
            android:background="#02000000"
            android:onClick="musicStop"
            />
</RelativeLayout>